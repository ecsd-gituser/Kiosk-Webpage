{
  "manifest_version": 2,
  "name": "ECSD Kiosk Browser",
  "version": "1.0",
  "permissions": [
    "webview",
    "storage",
    "fullscreen"
  ],
  "webview": {
    "partitions": [
      {
        "name": "persist:kiosk",
        "accessible_resources": ["<all_urls>"]
      }
    ]
  },
  "kiosk_enabled": true,
  "kiosk_only": true,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "start_url": "index.html",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
  "content_security_policy": {
  "extension_pages": "script-src 'self' 'unsafe-eval'; object-src 'self'; child-src 'self' https://*;"
}
}
