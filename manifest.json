{
  "manifest_version": 2,
  "name": "ECSD Kiosk Browser",
  "version": "1.0",
  "permissions": [
    "webview",
    "storage",
    "fullscreen"
  ],
  "webview": {
    "partitions": [
      {
        "name": "persist:kiosk",
        "accessible_resources": ["<all_urls>"]
      }
    ]
  },
  "kiosk_enabled": true,
  "kiosk_only": true,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; child-src 'self' https://*;",
  "start_url": "app.html"
}
