{
  "name": "ECSD Kiosk Browser",
  "short_name": "Kiosk Browser",
  "description": "A kiosk application for accessing Personal emails.",
  "version": "1.0",
  "manifest_version": 2,
  "kiosk_enabled": true,
  "kiosk_only": true,
  "permissions": ["tabs", "alarms"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": ["app.html", "logout.html"],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "start_url": "index.html",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#ffffff"
}
