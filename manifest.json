{
    "manifest_version": 3,
    "name": "Kiosk App",
    "version": "1.0",
    "permissions": ["tabs", "activeTab"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"], // or specify specific URLs
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["logout.html"],
            "matches": ["<all_urls>"]
        }
    ]
}
